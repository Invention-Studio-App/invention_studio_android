<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle" android:height="32dp">
                    <corners android:radius="2dp"></corners>
                    <stroke android:width="1dp" android:color="@color/IS_Text_Light"></stroke>
                    <solid android:color="@color/IS_FocusBackground_Light"></solid>
                </shape>
            </item>
            <item android:right="8dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/down_arrow"></bitmap>
            </item>
        </layer-list>
    </item>
</selector>