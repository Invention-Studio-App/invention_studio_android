<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inventionstudio.inventionstudioandroid.Fragments.MainEquipmentFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            segmentedgroup:sc_checked_text_color="@color/colorPrimary"
            segmentedgroup:sc_tint_color="@color/colorAccent"
            android:checkedButton="@id/info"
            >

            <RadioButton
                android:id="@+id/info"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info" />

            <RadioButton
                android:id="@+id/problem"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report A Problem"

                />
        </info.hoang8f.android.segmented.SegmentedGroup>

        <FrameLayout
            android:id="@+id/equipment_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp" />
    </LinearLayout>


</FrameLayout>
